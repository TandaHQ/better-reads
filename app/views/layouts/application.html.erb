<!DOCTYPE html>
<html>
  <head>
    <title>BetterReads</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if alert.present? %>
      <div class="bg-red-200 border-red-300 border text-red-500 font-bold text-center p-2 rounded w-1/3 m-auto relative">
        <%= alert %>
      </div>
    <% end %>
    <% if notice.present? %>
      <div class="bg-green-200 border-green-300 border text-green-500 font-bold text-center p-2 rounded w-1/3 m-auto relative">
        <%= notice %>
      </div>
    <% end %>
    <% if current_user.present? %>
      <nav class="bg-gray-800 text-white p-4">
        <div class="container mx-auto flex justify-between">
          <a href="<%= root_path %>" class="font-bold">BetterReads</a>
            <div class="flex space-x-4">
              <%= link_to "Books", books_path %>
              <%= link_to "Reviews", reviews_path %>
              <%= link_to "Logout", session_path,  data: {turbo_method: :delete} %>
            </div>
          </div>
        </div>
      </nav>
    <% end %>
    <main class="container mx-auto mt-8 px-5 flex">
      <%= yield %>
    </main>
  </body>
</html>
