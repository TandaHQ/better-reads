<div class="w-full">
  <% content_for :title, "Books" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Books</h1>
    <%= link_to "New book", new_book_path, class: "rounded-lg py-3 px-5 bg-green-700 text-white block font-medium" %>
  </div>

  <div id="books" class="min-w-full space-y-4 mt-4">
    <% @books.each do |book| %>
      <div class="card">
        <%= render book %>
        <%= link_to "Read reviews", book, class: "rounded-lg py-3 px-5 bg-green-200 inline-block font-medium" %>
        <%= link_to "Add your review", new_review_path, class: "rounded-lg py-3 px-5 bg-green-200 inline-block font-medium" %>
      </div>
    <% end %>
  </div>
</div>
